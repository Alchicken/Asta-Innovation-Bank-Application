<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="450.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="forgotpass.ForgotPasswordController">
   <children>
      <FontAwesomeIcon glyphName="ARROW_LEFT" layoutX="14.0" layoutY="21.0" onMouseClicked="#backToLogIn" size="20" />
      <FontAwesomeIcon glyphName="CLOSE" layoutX="420.0" layoutY="21.0" onMouseClicked="#closeApp" size="20" />
      <Label layoutX="99.0" layoutY="43.0" text="Forgot Password">
         <font>
            <Font name="Impact" size="35.0" />
         </font>
      </Label>
      <Label layoutX="99.0" layoutY="87.0" text="Recover your password here">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="acn" layoutX="48.0" layoutY="171.0" prefHeight="38.0" prefWidth="340.0" promptText="Your Account No" styleClass="field-decoration" stylesheets="@../design/bankStyle.css">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="ans" layoutX="47.0" layoutY="289.0" prefHeight="38.0" prefWidth="340.0" promptText="Answer" styleClass="field-decoration" stylesheets="@../design/bankStyle.css">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <ComboBox fx:id="sq" layoutX="48.0" layoutY="229.0" prefHeight="38.0" prefWidth="340.0" promptText="Security Question" styleClass="field-decoration" stylesheets="@../design/bankStyle.css" />
      <Button layoutX="118.0" layoutY="379.0" mnemonicParsing="false" onMouseClicked="#recoverPassword" prefHeight="35.0" prefWidth="200.0" styleClass="login-btn" stylesheets="@../design/bankStyle.css" text="Recover Password">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
