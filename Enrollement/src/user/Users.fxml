<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="user.UsersController">
   <children>
      <Pane prefHeight="500.0" prefWidth="800.0" styleClass="user-main" stylesheets="@../design/enrollment.css">
         <children>
            <FontAwesomeIcon fill="#0a264b" glyphName="CLOSE" layoutX="774.0" layoutY="25.0" onMouseClicked="#closeApp" size="20">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </FontAwesomeIcon>
            <FontAwesomeIcon fx:id="ico" fill="#0a264b" glyphName="MINUS" layoutX="751.0" layoutY="26.0" onMouseClicked="#minimizeApp" size="20">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </FontAwesomeIcon>
            <Text fill="#ba8600" layoutX="14.0" layoutY="64.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Golden Merry University - Users">
               <font>
                  <Font name="Impact" size="36.0" />
               </font>
            </Text>
            <TableView fx:id="user_table" layoutY="83.0" prefHeight="350.0" prefWidth="800.0">
              <columns>
                <TableColumn fx:id="user_name" prefWidth="265.0" text="Name" />
                <TableColumn fx:id="user_email" prefWidth="228.0" text="Email" />
                  <TableColumn fx:id="user_username" prefWidth="184.0" text="Username" />
                  <TableColumn fx:id="user_pin" prefWidth="122.0" text="PIN" />
              </columns>
            </TableView>
            <JFXButton buttonType="RAISED" layoutX="257.0" layoutY="453.0" onMouseClicked="#userAdd" prefHeight="30.0" prefWidth="100.0" ripplerFill="#007c34" styleClass="user-btns" stylesheets="@../design/enrollment.css" text=" ADD" textFill="#ba8600">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <graphic>
                  <FontAwesomeIcon fill="#ba8600" glyphName="PLUS" size="20" />
               </graphic>
            </JFXButton>
            <JFXButton buttonType="RAISED" layoutX="390.0" layoutY="453.0" onAction="#updateUser" prefHeight="33.0" prefWidth="116.0" ripplerFill="#00439a" styleClass="user-btns" stylesheets="@../design/enrollment.css" text=" UPDATE" textFill="#ba8600">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <graphic>
                  <FontAwesomeIcon fill="#ba8600" glyphName="ARROW_UP" />
               </graphic>
            </JFXButton>
            <JFXButton buttonType="RAISED" layoutX="538.0" layoutY="453.0" onAction="#deleteUser" prefHeight="30.0" prefWidth="100.0" ripplerFill="#900000" styleClass="user-btns" stylesheets="@../design/enrollment.css" text=" DELETE" textFill="#ba8600">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <graphic>
                  <FontAwesomeIcon fill="#ba8600" glyphName="REMOVE" size="20" />
               </graphic>
            </JFXButton>
            <JFXButton buttonType="RAISED" layoutX="666.0" layoutY="453.0" onAction="#showAllUsers" prefHeight="33.0" prefWidth="116.0" ripplerFill="#cfff3f" styleClass="user-btns" stylesheets="@../design/enrollment.css" text=" REFRESH" textFill="#ba8600">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <graphic>
                  <FontAwesomeIcon fill="#ba8600" glyphName="REFRESH" size="20" />
               </graphic>
            </JFXButton>
         </children>
      </Pane>
   </children>
